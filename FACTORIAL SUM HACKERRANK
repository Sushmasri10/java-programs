FACTORIAL SUM HACKERRANK

import java.io.*;
import java.util.*;
import java.lang.*;

public class Solution {

    public static void main(String[] args) {
       Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int s1=0,k=1,r=0;
       while(n>0){
          r=n%10;
           n=n/10;
       k=1;
       for(int i=1;i<=r;i++){
            k=k*i;
        
       }
       s1=s1+k;
       }
    System.out.println(s1);
    }
}
